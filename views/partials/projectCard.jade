div.box.projectContainer
  div.wrapper
    div.slider.FLC
      - var project = projects[indexInCollection]
      div.project(data-project="#{project.id}")
        a(href="#{project.url}")
          img(src="#{project.img}")
        a(href="#{project.url}")
          h2 #{project.name}
        p.description #{project.desc}
        div.authors 
          strong Created By: &nbsp;
          #{project.authors.join(', ')}
        div.footer
          button.voteButton Vote
      div.vote
        h2 #{project.name}
        p
          strong Like me? - Vote for me below.
        div.scroller
          - each poll in polls
            a(href="#", data-id="#{poll.id}").checkbar #{poll.name}
              span.description #{poll.description}
        div.footer
          button.doneButton Done
